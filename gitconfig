[color]
  ui = auto
[push]
  default = simple
[core]
  editor = nvim
  excludesfile = /Users/hdtafur/.gitignore_global
  autocrlf = input
[alias]
  st = status
  ss = status --short
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  au = add --update
  pr = pull --rebase
  noff = merge --no-ff
  fa = fetch --all
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1

  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  b = "!. ~/.githelpers && pretty_git_branch"
  bs = "!. ~/.githelpers && pretty_git_branch_sorted"

[merge]
  tool = vimdiff

